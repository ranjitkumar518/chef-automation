#### [ $(date +\%d -d tomorrow) = 01 ] helps to find what is the last day in the month
cron 'audit_report' do
      minute "0"
      hour "0"
      day "28-31"
      month '*'
      command "[ $(date +\%d -d tomorrow) = 01 ] && ~/abc_report.sh >> /var/log/abc_report.log 2>&1"
      user    'root'
      only_if {File.exists?('~/abc_report.sh')}
end
